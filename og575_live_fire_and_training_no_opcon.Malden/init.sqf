//              this file is executed on both server and clients              //
////////////////////////////////////////////////////////////////////////////////

enableEnvironment [hasInterface, hasInterface];

////////////////////////////////////////////////////////////////////////////////
// radom start time														
////////////////////////////////////////////////////////////////////////////////
if (isServer) then
{
myNewTime = random 24;
publicVariable "myNewTime";
};
waitUntil{not isNil "myNewTime"};
skipTime myNewTime;

setTimeMultiplier 6;


////////////////////////////////////////////////////////////////////////////////
//   TCL X																		//
////////////////////////////////////////////////////////////////////////////////

TCL_System=[0,True,[EAST, RESISTANCE],True,True,True,5,True,0,True,False];

////////////////////////////////////////////////////////////////////////////////
// Shut the hell up  - Mute Orders and Reports				         
////////////////////////////////////////////////////////////////////////////////

{_x setSpeaker "NoVoice"} forEach playableUnits;

enableSentences false;

nopop = true;

////////////////////////////////////////////////////////////////////////////////
//   ADV towing															
////////////////////////////////////////////////////////////////////////////////
SA_MAX_TOWED_CARGO = 3;
SA_TOW_SUPPORTED_VEHICLES_OVERRIDE = [ "Car", "Ship" ];
SA_TOW_SUPPORTED_VEHICLES_OVERRIDE = [ "Air", "Ship" ];

////////////////////////////////////////////////////////////////////////////////
// Alive        														
////////////////////////////////////////////////////////////////////////////////
call compile preprocessFile "staticData.sqf";

waituntil {(player getvariable ["alive_sys_player_playerloaded",false])};
waitUntil {!isNil "ALIVE_profileSystemInit"};
waituntil {(player getvariable ["alive_sys_player_playerloaded",false])};







